<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Clinic Receptionist Dashboard</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
        }

        .dashboard-container {
            background: white;
            border-radius: 20px;
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
            padding: 40px;
            width: 100%;
            max-width: 600px;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

        .dashboard-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 5px;
            background: linear-gradient(90deg, #4CAF50, #2196F3, #FF9800);
        }

        .header {
            margin-bottom: 40px;
        }

        .clinic-logo {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, #4CAF50, #45a049);
            border-radius: 50%;
            margin: 0 auto 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 10px 25px rgba(76, 175, 80, 0.3);
        }

        .clinic-logo::before {
            content: '+';
            color: white;
            font-size: 36px;
            font-weight: bold;
        }

        h1 {
            color: #333;
            font-size: 28px;
            font-weight: 600;
            margin-bottom: 10px;
        }

        .subtitle {
            color: #666;
            font-size: 16px;
            margin-bottom: 30px;
        }

        .button-grid {
            display: grid;
            gap: 20px;
            margin-top: 30px;
        }

        .action-button {
            background: white;
            border: 2px solid #e0e0e0;
            border-radius: 15px;
            padding: 25px 30px;
            font-size: 18px;
            font-weight: 600;
            color: #333;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 15px;
            position: relative;
            overflow: hidden;
        }

        .action-button::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
            transition: left 0.5s ease;
        }

        .action-button:hover::before {
            left: 100%;
        }

        .action-button.doctors {
            border-color: #2196F3;
            color: #2196F3;
        }

        .action-button.doctors:hover {
            background: #2196F3;
            color: white;
            transform: translateY(-3px);
            box-shadow: 0 15px 30px rgba(33, 150, 243, 0.3);
        }

        .action-button.patients {
            border-color: #4CAF50;
            color: #4CAF50;
        }

        .action-button.patients:hover {
            background: #4CAF50;
            color: white;
            transform: translateY(-3px);
            box-shadow: 0 15px 30px rgba(76, 175, 80, 0.3);
        }

        .action-button.add-patient {
            border-color: #FF9800;
            color: #FF9800;
        }

        .action-button.add-doctor {
            border-color: #9C27B0;
            color: #9C27B0;
        }

        .action-button.add-doctor:hover {
            background: #9C27B0;
            color: white;
            transform: translateY(-3px);
            box-shadow: 0 15px 30px rgba(156, 39, 176, 0.3);
        }

        .icon {
            width: 24px;
            height: 24px;
            fill: currentColor;
        }

        .footer {
            margin-top: 40px;
            padding-top: 20px;
            border-top: 1px solid #eee;
            color: #999;
            font-size: 14px;
        }

        @media (max-width: 480px) {
            .dashboard-container {
                padding: 30px 20px;
            }
            
            h1 {
                font-size: 24px;
            }
            
            .action-button {
                padding: 20px 25px;
                font-size: 16px;
            }
        }

        .pulse {
            animation: pulse 2s infinite;
        }

        @keyframes pulse {
            0% {
                transform: scale(1);
            }
            50% {
                transform: scale(1.05);
            }
            100% {
                transform: scale(1);
            }
        }
    </style>
</head>
<body>
    <div class="dashboard-container">
        <div class="header">
            <div class="clinic-logo pulse"></div>
            <h1>Welcome to MediCare Clinic</h1>
            <p class="subtitle">Receptionist Dashboard</p>
        </div>

        <div class="button-grid">
            <a href="/doctors" class="action-button doctors">
                <svg class="icon" viewBox="0 0 24 24">
                    <path d="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z"/>
                </svg>
                See Doctors
            </a>

            <a href="/patients" class="action-button patients">
                <svg class="icon" viewBox="0 0 24 24">
                    <path d="M12,2A3,3 0 0,1 15,5V11A3,3 0 0,1 12,14A3,3 0 0,1 9,11V5A3,3 0 0,1 12,2M19,11C19.5,11 20,11.4 20,12V16.5C20,16.78 19.78,17 19.5,17C19.22,17 19,16.78 19,16.5V12A1,1 0 0,0 18,11A1,1 0 0,0 17,12V13.5C17,13.78 16.78,14 16.5,14C16.22,14 16,13.78 16,13.5V12A3,3 0 0,1 19,9M5,11A3,3 0 0,1 8,12V13.5C8,13.78 7.78,14 7.5,14C7.22,14 7,13.78 7,13.5V12A1,1 0 0,0 6,11A1,1 0 0,0 5,12V16.5C5,16.78 4.78,17 4.5,17C4.22,17 4,16.78 4,16.5V12C4,11.45 4.45,11 5,11Z"/>
                </svg>
                See Patients
            </a>

            <a href="/add-patient" class="action-button add-patient">
                <svg class="icon" viewBox="0 0 24 24">
                    <path d="M15,14C12.33,14 7,15.33 7,18V20H23V18C23,15.33 17.67,14 15,14M6,10V7H4V10H1V12H4V15H6V12H9V10M15,12A4,4 0 0,0 19,8A4,4 0 0,0 15,4A4,4 0 0,0 11,8A4,4 0 0,0 15,12Z"/>
                </svg>
                Add New Patient
            </a>

            <a href="/add-doctor" class="action-button add-doctor">
                <svg class="icon" viewBox="0 0 24 24">
                    <path d="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14M13,19H11V17H13V19M13,16H11V15.5C11,15 11.4,14.6 11.9,14.6C12.4,14.6 12.8,15 12.8,15.5L12.8,15.7C12.8,16.1 12.4,16.5 11.9,16.5H11V16M6,10V7H4V10H1V12H4V15H6V12H9V10H6Z"/>
                </svg>
                Add New Doctor
            </a>
        </div>

        <div class="footer">
            <p>&copy; <%= new Date().getFullYear() %> MediCare Clinic. All rights reserved.</p>
        </div>
    </div>

    <script>
        // Add click animation
        document.querySelectorAll('.action-button').forEach(button => {
            button.addEventListener('click', function(e) {
                let ripple = document.createElement('span');
                ripple.classList.add('ripple');
                this.appendChild(ripple);

                let x = e.clientX - e.target.offsetLeft;
                let y = e.clientY - e.target.offsetTop;

                ripple.style.left = `${x}px`;
                ripple.style.top = `${y}px`;

                setTimeout(() => {
                    ripple.remove();
                }, 300);
            });
        });

        // Add current time display
        function updateTime() {
            const now = new Date();
            const timeString = now.toLocaleTimeString();
            const dateString = now.toLocaleDateString();
            
            if (!document.querySelector('.current-time')) {
                const timeDiv = document.createElement('div');
                timeDiv.className = 'current-time';
                timeDiv.style.cssText = `
                    position: absolute;
                    top: 20px;
                    right: 20px;
                    font-size: 12px;
                    color: #666;
                    text-align: right;
                `;
                document.querySelector('.dashboard-container').appendChild(timeDiv);
            }
            
            document.querySelector('.current-time').innerHTML = `${dateString}<br>${timeString}`;
        }

        updateTime();
        setInterval(updateTime, 1000);
    </script>
</body>
</html>